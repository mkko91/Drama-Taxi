{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
